<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volley"
        android:id="@+id/btnVolley"
        android:layout_below="@+id/ivDrag"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SwipeRefreshLayout"
        android:id="@+id/btnSwipeRefreshLayout"
        android:layout_below="@+id/btnVolley"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView"
        android:id="@+id/btnRecyclerView"
        android:layout_below="@+id/btnSwipeRefreshLayout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridView"
        android:id="@+id/btnGridView"
        android:layout_below="@+id/btnRecyclerView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WaterFallView"
        android:id="@+id/btnWaterFallView"
        android:layout_below="@+id/btnGridView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <com.volley.wjh.modelapp.CustomWidget.CountTimeButton
        android:id="@+id/cbtnTime"
        android:layout_below="@+id/btnWaterFallView"
        android:background="#6c948b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:totalTime="60000"
        app:stepTime="1000"
        app:ableClickBackground="#6c948b"
        app:disableClickBackground="#f2f3f3"
        android:text="获取验证码"/>

    <Button
        android:id="@+id/btnWxLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:text="WXLogin"/>

</LinearLayout>